# Email Gateway Settings

# IMAP (Inbound)
MAIL_SERVER=mail.example.com
MAIL_PORT=993
MAIL_USERNAME=aios@example.com
MAIL_PASSWORD=your_secure_password
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_FOLDER=INBOX
MAIL_PROCESSED_FOLDER=Processed
MAIL_ERROR_FOLDER=Errors
MAIL_CHECK_INTERVAL=300

# SMTP (Outbound)
MAIL_FROM=aios@example.com
MAIL_FROM_NAME=Bluelabel AIOS
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=aios@example.com
SMTP_PASSWORD=your_secure_password
SMTP_USE_SSL=False
SMTP_USE_TLS=True

# Email Processing Settings
MAIL_ALLOWED_SENDERS=user1@example.com,user2@example.com
MAIL_SUBJECT_KEYWORDS=process,analyze
MAIL_REPLY_TO_SENDER=True

# WhatsApp Gateway Settings
WHATSAPP_ENABLED=False
WHATSAPP_PHONE_ID=your_whatsapp_phone_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/gateway/whatsapp/webhook
WHATSAPP_ALLOWED_NUMBERS=1234567890,0987654321
WHATSAPP_AUTO_REPLY=True

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Local LLM Settings
LOCAL_LLM_ENABLED=True
LOCAL_LLM_HOST=http://localhost:11434
LOCAL_LLM_MODEL=llama3